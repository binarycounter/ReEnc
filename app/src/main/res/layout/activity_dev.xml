<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="binarycounter.reenc.DevActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/bSettings"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="bcSettings" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainActivity"
        android:id="@+id/bCallMain"
        android:onClick="bcCallMain"
        android:layout_above="@+id/bKillMP"
        android:layout_toRightOf="@+id/bSettings"
        android:layout_toEndOf="@+id/bSettings" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eDev1"
        android:layout_below="@+id/bSettings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/bKillMP"
        android:layout_toStartOf="@+id/bKillMP" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stream"
        android:id="@+id/bStream"
        android:onClick="bcStream"
        android:layout_alignTop="@+id/bKillMP"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kill MP"
        android:id="@+id/bKillMP"
        android:onClick="bcKillMP"
        android:layout_alignTop="@+id/eDev1"
        android:layout_toLeftOf="@+id/bStream"
        android:layout_toStartOf="@+id/bStream" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VLCDev"
        android:id="@+id/bCallVLCDev"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bCallMain"
        android:layout_alignRight="@+id/bStream"
        android:layout_alignEnd="@+id/bStream"
        android:onClick="bcCallVLCDev" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eDev2"
        android:layout_below="@+id/bKillMP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/bCallVLCDev"
        android:layout_toLeftOf="@+id/bCallVLCDev" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stream mH"
        android:id="@+id/bStreamMH"
        android:layout_alignBottom="@+id/eDev2"
        android:layout_alignRight="@+id/bStream"
        android:layout_alignEnd="@+id/bStream"
        android:layout_toRightOf="@+id/eDev2"
        android:layout_toEndOf="@+id/eDev2"
        android:onClick="bcStreamMH" />
</RelativeLayout>
